{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}